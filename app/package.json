    "@types/lru-cache": "^5.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.10",
    "@types/on-finished": "^2.3.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/warning": "^3.0.0",
    "autoprefixer": "^10.4.0",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-twin": "^1.0.2",
    "cross-env": "^7.0.3",
    "cypress": "^9.1.1",
    "dotenv-cli": "^4.1.1",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.2.0",
    "eslint": "^7.32.0",
    "eslint-config-kentcdodds": "^19.2.0",
    "glob": "^7.2.0",
