{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "scripts": {
    "postinstall": "patch-package --patch-dir other/patches && remix setup",
    "prebuild": "npm run clean && echo All clean âœ¨",
    "clean": "rimraf ./node_modules/.cache ./server/dist ./build ./public/build \"./app/styles/**/*.css\"",
    "build:css": "postcss styles/**/*.css --base styles --dir app/styles",
    "build:css:prod": "npm run build:css -- --env production",
    "build:remix": "cross-env NODE_ENV=production dotenv -e .env remix build --sourcemap",
    "build:server": "node ./other/build-server.js",
    "build": "npm run build:css:prod && npm run build:remix && npm run build:server",
    "dev": "pm2-dev ./other/pm2.config.js",
    "start": "cross-env NODE_ENV=production node --require ./node_modules/dotenv/config ./index.js",
    "start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require ./node_modules/dotenv/config ./index.js",
    "test": "jest",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\"",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@chakra-ui/hooks": "^1.7.1",
    "@chakra-ui/utils": "^1.9.1",
    "@ctrl/tinycolor": "^3.4.0",
    "@headlessui/react": "^1.4.2",
    "@prisma/client": "^3.6.0",
    "@remix-run/react": "^1.0.6",
    "@remix-run/serve": "^1.0.6",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "clsx": "^1.1.1",
    "compression": "^1.7.4",
    "dotenv": "^10.0.0",
    "esbuild": "^0.14.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.3",
    "framer-motion": "^5.4.5",
    "fs-extra": "^10.0.0",
    "i18next": "^21.6.0",
    "morgan": "^1.10.0",
    "on-finished": "^2.3.0",
    "patch-package": "^6.4.7",
    "pm2": "^5.1.2",
    "postcss-import": "^14.0.2",
    "prisma": "^3.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.1",
    "remix": "^1.0.6",
    "remix-i18next": "^2.1.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/compression": "^1.7.2",
    "@types/express-http-proxy": "^1.6.3",
    "@types/fs-extra": "^9.0.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.10",
    "@types/on-finished": "^2.3.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^4.1.1",
    "esbuild-register": "^3.2.0",
    "msw": "^0.35.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.2",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "sideEffects": false
}
