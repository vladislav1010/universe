    "tailwindcss": "^3.0.2",
    "twin.macro": "^2.8.2",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "sideEffects": false,
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "server-build",
    "build",
    "public/build",
    "*.ignored/",
    "*.ignored.*"
  ]
}
